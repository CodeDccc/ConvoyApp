<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggedInActivity">


  <fragment
      android:id="@+id/map"
      class="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="424dp"
      android:layout_height="459dp"
      android:layout_marginTop="10dp"
      app:layout_constraintBottom_toTopOf="@+id/convoyControl"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/convoyText">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/endCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:contentDescription="@string/end_convoy_button"
        android:src="@drawable/endconvoy"
        app:backgroundTint="@color/red" />
        android:contentDescription="@string/end_con" />
  </fragment>

  <TextView
      android:id="@+id/convoyText"
      android:layout_width="305dp"
      android:layout_height="91dp"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="10dp"
      android:gravity="bottom"
      android:textAlignment="center"
      android:textStyle="bold"
      android:textSize="18sp"
      app:layout_constraintBottom_toTopOf="@+id/map"
      app:layout_constraintEnd_toStartOf="@+id/logOutBtn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="RtlCompat" />

  <FrameLayout
      android:id="@+id/convoyControl"
      android:layout_width="415dp"
      android:layout_height="128dp"
      android:layout_marginBottom="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/map">

  </FrameLayout>

  <Button
      android:id="@+id/logOutBtn"
      android:layout_width="103dp"
      android:layout_height="69dp"
      android:text="@string/log_out"
      app:layout_constraintBottom_toTopOf="@+id/map"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/convoyText"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>